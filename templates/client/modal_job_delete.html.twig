<div class="modal fade" id="delete-job" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'delete_job'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ path('web_job_delete',{slug:job.slug,id:job.id}) }}" method="POST"  class="container-fluid " >

                    <div class="main row ">
                        <h4>{{ 'delete_job_msg'|trans }}</h4>
                    </div>
                    <div class="row">

                            <button data-dismiss="modal" class=" btn  btn-primary btn-block">
                                {{ 'no'|trans }}
                            </button>
                            <button  type="submit" class=" btn btn-block btn-warning">
                                {{ 'yes'|trans }}
                            </button>

                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button style="border-top-width: 0px;border-right-width: 0px;border-bottom-width: 0px;border-left-width: 0px;" type="button" class=" btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>