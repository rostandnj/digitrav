<div class="modal fade" id="pay-job" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'payment_detail'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">
                                    {{ 'job'|trans }} : <small id="job-title">{{ job.title }}</small> <br/>
                                    <span id="job-msg"> </span>

                                </h3>


                            </div>
                            <div class="panel-body">
                                <div class="row container">
                                    <img class="img-thumbnail" style="width: 30%;height: 70px;" src="{{ asset('assets/images/orange.png') }}">
                                    <img style="display: none" class="img-thumbnail" style="width: 30%;height: 70px;" src="{{ asset('assets/images/mtn.png') }}">
                                </div>
                                <form method="post" action="{{ path('web_initiate_payment') }}" role="form">


                                    <input type="hidden" name="quoteid" value="" id="quoteid" />
                                    <input type="hidden" name="slug" value="{{ job.slug }}" id="slug" />
                                    <div class="nav nav-pills nav-stacked">
                                        {{ 'job_amount'|trans }} :   &nbsp<span id="total-amount"> 0 </span> &nbsp XAF

                                    </div>
                                    <br/>
                                    <button type="submit" id="btn-pay-name" class="btn btn-success btn-lg btn-block" >Pay</button>

                                </form>
                            </div>
                        </div>

                    </div>
                </div>



            </div>
            <div class="modal-footer">
                <button style="border-top-width: 0px;border-right-width: 0px;border-bottom-width: 0px;border-left-width: 0px;" type="button" class=" btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

