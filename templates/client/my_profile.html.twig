{% extends 'client/base/base.html.twig' %}

{% block main %}

    {% if userp is not null %}

        <section class="pb-3 mt-3 container-fluid " >

            <div class="row " >
                <div class="content container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card card-user">

                                <div class="card-body">
                                    <div class="author">
                                        <a href="#">
                                            <img class="avatar border-gray img-thumbnail align-content-center " width="200" src="{{ asset('assets/images/mike.jpg') }}" alt="...">
                                            <h5 class="title">{{ userp.username }}</h5>
                                        </a>

                                    </div>
                                    <p class="description text-center">
                                        {% if userp.userDetail.citation =="" %}
                                            {% trans %}default_citation{% endtrans %}
                                        {% else %}
                                            {{ userp.userDetail.citation }}
                                        {% endif %}
                                    </p>
                                    <p class="text-center">
                                        {% if userp.userDetail.note==0 %}
                                            {% for i in 1..5-userp.userDetail.note %}
                                                <img src="{{ asset('assets/images/star_no.png') }}" width="30" />
                                            {% endfor %}
                                        {% else %}
                                            {% for i in 0..userp.userDetail.note-1 %}
                                                <img src="{{ asset('assets/images/star_ok.png') }}" width="30" />
                                            {% endfor %}

                                            {% if userp.userDetail.note <5 %}
                                                {% for i in 1..5-userp.userDetail.note %}
                                                    <img src="{{ asset('assets/images/star_no.png') }}" width="30" />
                                                {% endfor %}

                                            {% endif %}


                                        {% endif %}




                                    </p>
                                </div>
                                <div class="card-footer">
                                    <hr>
                                    <div class="button-container">
                                        <div class="row">
                                            <div class="col-lg-3 col-md-6 col-6 ml-auto">
                                                <h5>12
                                                    <br>
                                                    <small>{% trans %}work_complete{% endtrans %}</small>
                                                </h5>
                                            </div>
                                            <div class="col-lg-4 col-md-6 col-6 ml-auto mr-auto">
                                                <h5>{% if userp.userDetail.avilability == 0 %}
                                                        <span style="color: red" class="mdi mdi-circle"></span>
                                                    {% else %}
                                                        <span style="color: green" class="mdi mdi-circle"></span>
                                                    {% endif %}
                                                    <br>
                                                    <small>{% trans %}status{% endtrans %}</small>
                                                </h5>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">{% trans %}reviews{% endtrans %}</h4>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled team-members">
                                        <li>
                                            <div class="row mb-1">
                                                <div class="col-md-4 col-4 mb-2" >
                                                    <div class="avatar" style="display: inline-grid;">
                                                        <img width="50"  src="{{ asset('assets/images/mike.jpg') }}" alt="Circle Image" class="img-circle img-no-padding img-responsive" />
                                                        <span style="font-size: 12px;font-weight: bold">client 1 </span>
                                                    </div>
                                                </div>
                                                <div class="col-md-8 col-8 " style="margin-top: -25px;margin-left: -15px;" >

                                                    <br/>
                                                    <span style="float: left;" class="text-muted">
                          <small>{{ "very good technician with, he make a work as i expect dfgdhhfhfhhghghghghghg gggg ggggg "|slice(0,55)}}...</small>
                        </span>


                                                </div>

                                            </div>
                                        </li>
                                        <li>
                                            <div class="row mb-1">
                                                <div class="col-md-4 col-4 mb-2" >
                                                    <div class="avatar" style="display: inline-grid;">
                                                        <img width="50"  src="{{ asset('assets/images/mike.jpg') }}" alt="Circle Image" class="img-circle img-no-padding img-responsive" />
                                                        <span style="font-size: 12px;font-weight: bold">client 1 </span>
                                                    </div>
                                                </div>
                                                <div class="col-md-8 col-8 " style="margin-top: -25px;margin-left: -15px;" >

                                                    <br/>
                                                    <span style="float: left;" class="text-muted">
                          <small>{{ "very good technician with, he make a work as i expect dfgdhhfhfhhghghghghghg gggg ggggg "|slice(0,55)}}...</small>
                        </span>


                                                </div>

                                            </div>
                                        </li>
                                        <li>
                                            <div class="row mb-1">
                                                <div class="col-md-4 col-4 mb-2" >
                                                    <div class="avatar" style="display: inline-grid;">
                                                        <img width="50"  src="{{ asset('assets/images/mike.jpg') }}" alt="Circle Image" class="img-circle img-no-padding img-responsive" />
                                                        <span style="font-size: 12px;font-weight: bold">client 1 </span>
                                                    </div>
                                                </div>
                                                <div class="col-md-8 col-8 " style="margin-top: -25px;margin-left: -15px;" >

                                                    <br/>
                                                    <span style="float: left;" class="text-muted">
                          <small>{{ "very good technician with, he make a work as i expect dfgdhhfhfhhghghghghghg gggg ggggg "|slice(0,55)}}...</small>
                        </span>


                                                </div>

                                            </div>
                                        </li>








                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card-header">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#home"><h5 class="card-title">{% trans %}information{% endtrans %}</h5></a></li>
                                    <li><a data-toggle="tab" href="#messages"><h5 class="card-title">Menu 2</h5></a></li>

                                </ul>
                            </div>

                            <div class="tab-content">
                                <div class="tab-pane active" id="home">
                                    <div class="card card-user">

                                        <div class="card-body">
                                            <form>
                                                <div class="row">
                                                    <div class="col-md-6 pr-1">
                                                        <div class="form-group">
                                                            <label for="company">{% trans %}company{% endtrans %}</label>
                                                            <input name="company" type="text" class="form-control" disabled="" placeholder="Company" value="
{% if userp.userDetail.isCompany== 1 %}
    {% if userp.userDetail.company is not null %}
        {{ userp.userDetail.company.name }}
    {% else %}
        {{ 'company_not_added'|trans }}
    {% endif %}
{% else %}
{{ 'independent'|trans }}
{% endif %}
">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 px-1">
                                                        <div class="form-group">
                                                            <label for="username">{{ 'role'|trans }}</label>
                                                            <input name="username" disabled type="text" class="form-control" placeholder="Username" value="
{% if userp.userDetail.isCompany== 1 %}
{{ 'employee'|trans }}
{% else %}
{{ 'manager'|trans }}
{% endif %}
">
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 pr-1">
                                                        <div class="form-group">
                                                            <label>First Name</label>
                                                            <input disabled type="text" class="form-control" placeholder="Company" value="{{ userp.name }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 pl-1">
                                                        <div class="form-group">
                                                            <label>Last Name</label>
                                                            <input disabled type="text" class="form-control" placeholder="Last Name" value="{{ userp.surname }}">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Phone</label>
                                                            <input  type="text" class="form-control" placeholder="Home Address" value="{{ userp.phone }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 ">
                                                        <div class="form-group">
                                                            <label>Email</label>
                                                            <input disabled type="text" class="form-control" placeholder="Home Address" value="{{ userp.email }}">
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4 pr-1">
                                                        <div class="form-group">
                                                            <label>City</label>
                                                            <input type="text" class="form-control" placeholder="City" value="{{ userp.location.city }}">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4 px-1">
                                                        <div class="form-group">
                                                            <label>Quater</label>
                                                            <input type="text" class="form-control" placeholder="{{ userp.location.quater }}" value="Australia">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4 pl-1">
                                                        <div class="form-group">
                                                            <label>Street</label>
                                                            <input type="text" class="form-control" placeholder="ZIP Code" value="{{ userp.location.detail }}">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label>About Me</label>
                                                            <textarea class="form-control textarea">{{ userp.userDetail.description }}</textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label>Quote</label>
                                                            <textarea rows="2" style="resize: none;" class="form-control textarea">{{ userp.userDetail.citation }}</textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <button class="btn btn-warning">Change Password</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="update ml-auto mr-auto">
                                                        <button type="submit" class="btn btn-primary btn-round">Update Profile</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="messages">
                                    Hello!
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </section>

    {% endif %}
    {% if userp is null %}

        <section style="" class="pb-3 mt-3 container-fluid user-not-found" >

            user not found
        </section>

    {% endif %}

{% endblock %}
