<div class="modal fade" id="end-job" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'validate_job'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form action="{{ path('web_end_job',{slug:job.slug}) }}" method="POST"  class="container-fluid " >

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="message">{{ 'message_comment'|trans }}</label>
                                        <input type="text" minlength="3"  required class="form-control" id="message" name="message" placeholder="" />
                                        <div class="invalid-feedback">
                                            {{ 'required_field'|trans }}
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <legend>{{ 'give_note'|trans }}</legend>
                                        <fieldset class="rating">
                                            <input required type="radio" id="star5" name="note" value="5" />
                                            <label for="star5">5 stars</label>
                                            <input type="radio" id="star4" name="note" value="4" />
                                            <label for="star4">4 stars</label>
                                            <input type="radio" id="star3" name="note" value="3" />
                                            <label for="star3">3 stars</label>
                                            <input type="radio" id="star2" name="note" value="2" />
                                            <label for="star2">2 stars</label>
                                            <input type="radio" id="star1" name="note" value="1" />
                                            <label for="star1">1 star</label>
                                        </fieldset>

                                        <div class="invalid-feedback">
                                            {{ 'required_field'|trans }}
                                        </div>
                                    </div>

                                </div>



                                <div class="col-md-12">
                                    <div class="my_profile_input">
                                        <button type="submit" class="btn btn-lg btn-thm" href="#">{{ 'send'|trans }}</button>
                                    </div>
                                </div>

                            </div>

                        </form>
            </div>

        </div>
        <div class="modal-footer">
            <button style="border-top-width: 0px;border-right-width: 0px;border-bottom-width: 0px;border-left-width: 0px;" type="button" class=" btn-secondary" data-dismiss="modal">Close</button>

        </div>
    </div>
</div>

