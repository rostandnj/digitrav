{% extends 'client/base/base.html.twig' %}

{% block main %}
    <div class="wrapper compact-wrapper">

        {% include 'client/dashboard_nav.html.twig' %}



        <div class="main-panel " style="margin-top: -65px">
            <div class="content">
                <div class="panel-header bg-primary-gradient">
                    <div class="page-inner py-5">
                        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
                            <div>
                                <h2 class="text-white pb-2 fw-bold">{{ 'domain'|trans }}: {{ domain.name }} - {{ 'domain_users'|trans }}</h2>

                            </div>
                            <div class="ml-md-auto py-2 py-md-0" >
                               {% for m in materials %}
                                   <span class="badge badge-danger">{{ m.name }}</span>

                                {% endfor %}
                            </div>

                        </div>
                    </div>
                </div>
                <div class="dash page-inner mt--5">

                    <div class="row container-fluid mb-5 mt-5">
                        <table id="domain-user-datatables" class="display table table-responsive table-striped table-hover" >
                            <thead>
                            <tr>
                                <th><span class="fa fa-eye"></span></th>
                                <th>{{ 'name'|trans }}</th>
                                <th>{{ 'email'|trans }}</th>
                                <th>{{ 'phone'|trans }}</th>
                                <th>{{ 'type'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>
                                        <a href="{{ path('web_dashboard_user_detail',{"name":user.profileName,"id":user.uid}) }}">
                                            <i style="color: #1572e8" class="fa fa-eye"></i>
                                        </a>
                                    </td>

                                    <td> {{ user.name}}</td>
                                    <td> {{ user.email}}</td>
                                    <td> {{ user.phone}}</td>
                                    <td> {{ 'technician'|trans}}</td>
                                </tr>


                            {% endfor %}
                            {% for company in companies %}
                                <tr>
                                    <td>
                                        <a href="{{ path('web_dashboard_user_detail',{"name":company.manager.profileName,"id":company.manager.uid}) }}">
                                            <i style="color: #1572e8" class="fa fa-eye"></i>
                                        </a>
                                    </td>

                                    <td> {{ company.name}}</td>
                                    <td> {{ company.manager.email}}</td>
                                    <td> {{ company.manager.phone}}</td>
                                    <td> {{ 'company'|trans}}</td>
                                </tr>


                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
                {% include 'client/base/dashboard_footer.html.twig' %}
            </div>
        </div>




    </div>



{% endblock %}

{% block footer %}

{% endblock %}

{% block js %}
    <script >
        $(document).ready(function() {
            $('#domain-user-datatables').DataTable({
            });




        });
    </script>

{% endblock %}
