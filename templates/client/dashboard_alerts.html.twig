{% extends 'client/base/base.html.twig' %}

{% block main %}
    <div class="wrapper compact-wrapper">

        {% include 'client/dashboard_nav.html.twig' %}



        <div class="main-panel " style="margin-top: -65px">
            <div class="content">
                <div class="panel-header bg-primary-gradient">
                    <div class="page-inner py-5">
                        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
                            <div>
                                <h2 class="text-white pb-2 fw-bold">{{ 'alerts'|trans }} </h2>

                            </div>
                            <div class="row ml-md-auto py-2 py-md-0 short-nav">

                                {% include 'client/shortcut_admin_nav.html.twig' %}
                            </div>

                        </div>


                    </div>
                </div>
                <div class="dash page-inner mt--5">

                    <div class="row container-fluid mb-5 mt-5">
                        <table id="job-datatables" class="display table table-responsive table-striped table-hover" >
                            <thead>
                            <tr>
                                <th><span class="flaticon-settings"></span></th>
                                <th>{{ 'title'|trans }}</th>
                                <th>{{ 'domain'|trans }}</th>
                                <th>{{ 'category'|trans }}</th>
                                <th>{{ 'status'|trans }}</th>
                                <th>{{ 'date'|trans }}</th>
                                <th>{{ 'delete'|trans }}</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for alert in alerts %}
                                <tr {% if alert.intervention.statut==0 %} class="success" {% endif %}>
                                    <td >
                                        <a target="_blank" href="{{ path('web_show_job',{slug:alert.intervention.slug}) }}">
                                            <i style="color: #1572e8" class="fa fa-eye"></i>
                                        </a>
                                    </td>
                                    <td> {{ alert.intervention.title}}</td>
                                    <td> {{ alert.intervention.domain.name}}</td>
                                    <td> {{ alert.intervention.category.name}}</td>
                                    <td> {% if alert.intervention.statut==0 %} {{ 'statut_in_progress'|trans }} {% endif %}</td>
                                    <td> {{alert.date | date('y-m-d H:i:s')}}</td>
                                    <td> <form method="post" novalidate>
                                            <input type="hidden" name="id" value="{{ alert.intervention.id }}" />
                                            <button class="btn btn-danger" type="submit"><i class="fas flaticon-close"></i></button>
                                        </form></td>

                                </tr>


                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
                {% include 'client/base/dashboard_footer.html.twig' %}
            </div>
        </div>




    </div>



{% endblock %}

{% block footer %}

{% endblock %}

{% block js %}


{% endblock %}
