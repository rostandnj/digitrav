<div class="modal fade" id="send-invitation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Invitation <span id="id"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ path('web_send_job_for_invitation') }}" method="POST" enctype="multipart/form-data" class="container-fluid " >

                    <div class="form-group col-lg-12" id="main-loader" style="text-align: center">
                        <i class="fa fa-spin fa-10x fa-circle-notch"></i>
                    </div>

                    <div id="main-invit" style="display: none" class="form-group col-lg-12">
                        <label for="job">{{ 'type'|trans }}</label> <br>

                        <select required id="job" name="job" class="form-control">
                        </select>
                        <input id="tech-id" name="tech-id" type="hidden" value="" />
                    </div>
                    <div class="form-group col-lg-12" id="main-message" style="">
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <button id="send-modal" style="display: none" type="submit" class=" btn btn-md btn-primary btn-success">
                                {% trans %} send{% endtrans %}
                            </button>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button style="border-top-width: 0px;border-right-width: 0px;border-bottom-width: 0px;border-left-width: 0px;" type="button" class=" btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>