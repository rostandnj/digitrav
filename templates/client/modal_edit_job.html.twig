<div class="modal fade" id="edit-job" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'edit_job'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ path('web_edit_job',{slug:job.slug,id:job.id}) }}" method="POST"  class="container-fluid " >

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="my_profile_input form-group">
                                <label for="title1">{{ 'title'|trans }}</label>
                                <input type="text" class="form-control" id="title1" name="title1" required placeholder="{{ 'title_placeholder'|trans }}" value="{{ job.title }}">
                                <div class="invalid-feedback">
                                    {{ 'required_field'|trans }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="my_resume_textarea">
                                <div class="form-group">
                                    <label for="description1">{{ 'job_description'|trans }}</label>
                                    <small>({{ 'description_warning'|trans }})</small>
                                    <textarea minlength="50"  required class="form-control" id="description1" rows="9" name="description1" placeholder="{{ 'description_placeholder'|trans }}"  >{{ job.description }}</textarea>
                                    <div class="invalid-feedback">
                                        {{ 'required_field'|trans }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 col-lg-12">
                            <div class="my_profile_input form-group">
                                <label for="start_date1">{{ 'start_date'|trans }}</label>
                                <input  type="text" value="{{ job.date|date('Y/m/d H:i') }}" class="datepicker form-control" id="start_date1" name="start_date1" data-date-start-date="{{ job.date|date('Y/m/d H:i') }}" required>
                                <div class="invalid-feedback">
                                    {{ 'required_field'|trans }}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="my_profile_input">
                                <button type="submit" class="btn btn-lg btn-thm" href="#">{{ 'update'|trans }}</button>
                            </div>
                        </div>

                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button style="border-top-width: 0px;border-right-width: 0px;border-bottom-width: 0px;border-left-width: 0px;" type="button" class=" btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>